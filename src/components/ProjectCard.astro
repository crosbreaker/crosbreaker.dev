---
import type { ProjectRepo } from "../config/projects";

interface Props {
  project: ProjectRepo;
  index: number;
}

const { project, index } = Astro.props;
const cardId = `project-${index + 1}`;
---

<div class="project-card-container">
  <div class="project-card" id={cardId} data-owner={project.owner} data-repo={project.repo}>
    <div class="project-header">
      <div class="project-icon" aria-hidden="true">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="16,18 22,12 16,6"></polyline>
          <polyline points="8,6 2,12 8,18"></polyline>
        </svg>
      </div>
      <div class="project-info">
        <a href="#" class="project-name loading" rel="noopener noreferrer" target="_blank">Loading project</a>
        <div class="project-description loading">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <circle cx="12" cy="12" r="3"></circle>
            <path d="M12 1v6M12 17v6M4.22 4.22l4.24 4.24M15.54 15.54l4.24 4.24M1 12h6M17 12h6M4.22 19.78l4.24-4.24M15.54 8.46l4.24-4.24"></path>
          </svg>
          <span class="project-description-text">Loading description</span>
        </div>
        <div class="project-stats">
          <div class="project-stat">
            <svg class="star-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
            </svg>
            <span class="project-star-count loading">0</span>
          </div>
          <div class="project-stat">
            <svg class="fork-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <circle cx="12" cy="18" r="3"></circle>
              <circle cx="6" cy="6" r="3"></circle>
              <circle cx="18" cy="6" r="3"></circle>
              <path d="M18 9v1a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V9"></path>
              <path d="M12 12v3"></path>
            </svg>
            <span class="project-fork-count loading">0</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
